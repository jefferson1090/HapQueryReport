{
  "name": "server",
  "version": "1.1.33",
  "main": "electron-main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "copy-client": "powershell -Command \"Copy-Item -Path '../client/dist/*' -Destination './public' -Recurse -Force\"",
    "prebuild": "npm run copy-client",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.hap.queryreport",
    "productName": "Hap Query Report",
    "npmRebuild": false,
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      "instantclient/**/*"
    ],
    "files": [
      "**/*",
      "!dist/**/*",
      "!uploads/**/*",
      "!server_log.txt",
      "!oracle-builder.exe",
      "!deploy.ps1",
      "!start_app.bat"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": false
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "express": "^5.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "oracledb": "^6.10.0"
  },
  "bin": "index.js",
  "devDependencies": {
    "electron": "^39.2.5",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.11",
    "wait-on": "^9.0.3"
  }
}